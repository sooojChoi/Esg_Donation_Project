<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">


        <LinearLayout
            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:orientation="vertical"

            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circle_iv"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@android:color/transparent"
                android:src="@drawable/avatar"
                app:civ_border_color="@color/gray_110"
                app:civ_border_overlay="true"
                app:civ_border_width="2dp" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginTop="-35dp"
                android:layout_marginRight="-35dp"
                android:background="@drawable/stroke_design"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/edit"
                tools:ignore="SpeakableTextPresentCheck" />



                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="40dp"
                    android:fontFamily="@font/nanumsquareb"
                    android:paddingBottom="0dp"
                    android:text="이름"
                    android:textColor="@color/gray_120"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/nameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="10dp"
                    android:ems="10"
                    android:fontFamily="@font/nanumsquarer"
                    android:hint="이름을 입력하세요."
                    android:inputType="textPersonName"
                    android:minHeight="48dp"
                    android:text=""
                    android:textColor="@color/gray_60"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/nanumsquareb"
                    android:paddingBottom="0dp"
                    android:text="이메일"
                    android:textColor="@color/gray_120"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/editTextTextEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginBottom="0dp"
                    android:ems="10"
                    android:fontFamily="@font/nanumsquarer"
                    android:hint="이메일을 입력하세요."
                    android:inputType="textEmailAddress"
                    android:minHeight="48dp"
                    android:text=""
                    android:textColor="@color/gray_60"
                    android:textSize="16sp" />

            <TextView
                android:id="@+id/emailWarningTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumbarungothic"
                android:text="이메일 형식을 지켜주세요."
                android:textColor="#ea4545"
                android:textSize="14dp"
                android:visibility="invisible"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/nanumsquareb"
                    android:paddingBottom="6dp"
                    android:text="비밀번호"
                    android:textColor="@color/gray_120"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/buttonForChangingPw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:backgroundTint="@color/button_green"
                    android:fontFamily="@font/nanumsquarer"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="10dp"
                    android:text="변경하기"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/nanumsquareb"
                    android:paddingBottom="6dp"
                    android:text="성별"
                    android:textColor="@color/gray_120"
                    android:textSize="15sp" />

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="50dp"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/radio_button_left_selector"
                        android:button="@null"
                        android:checked="true"
                        android:fontFamily="@font/nanumsquarer"
                        android:gravity="center"
                        android:paddingHorizontal="10dp"
                        android:text="남자"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/radioButton2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/radio_button_middle_selector"
                        android:button="@null"
                        android:checked="false"
                        android:fontFamily="@font/nanumsquarer"
                        android:gravity="center"
                        android:paddingHorizontal="10dp"
                        android:text="여자"
                        android:textColor="@color/light_black"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/radioButton3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/radio_button_right_selector"
                        android:button="@null"
                        android:checked="false"
                        android:fontFamily="@font/nanumsquarer"
                        android:gravity="center"
                        android:paddingHorizontal="10dp"
                        android:text="선택 안함"
                        android:textColor="@color/light_black"
                        android:textSize="14sp" />
                </RadioGroup>

            <TextView
                android:id="@+id/logOutTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="로그아웃"
                android:layout_marginTop="70dp"
                android:fontFamily="@font/nanumsquarer"
                android:textSize="15sp"
                android:paddingHorizontal="20dp"
                android:layout_gravity="center"
                android:paddingVertical="10dp"
                android:textColor="@color/gray_110"
                android:gravity="center"/>

            <TextView
                android:id="@+id/signOutTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회원탈퇴"
                android:paddingHorizontal="20dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/nanumsquarer"
                android:textSize="15sp"
                android:paddingVertical="10dp"
                android:textColor="@color/gray_110"
                android:gravity="center"/>

        </LinearLayout>


    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/loading_layout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone">


        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="130dp"
            android:indeterminateTint="@color/button_green"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/textView10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/splash" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:fontFamily="@font/nanumsquarer"
            android:text="오늘도 기부 한 걸음"
            android:textColor="@color/light_black"
            android:textSize="28sp"
            app:layout_constraintBottom_toTopOf="@+id/progressBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>



</LinearLayout>