<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/editTextTextForCurrentPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:fontFamily="@font/nanumbarungothic"
        android:hint="비밀번호를 입력하세요."
        android:inputType="textPassword"
        android:textColor="@color/gray_110"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="60dp"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/button_green"
        android:fontFamily="@font/nanumbarungothic"
        android:paddingVertical="12dp"
        android:text="확인"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/editTextTextForCurrentPassword"
        app:layout_constraintStart_toStartOf="@+id/editTextTextForCurrentPassword"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextForCurrentPassword" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="60dp"
        android:textSize="18sp"
        android:gravity="start"
        android:textColor="@color/light_black"
        android:fontFamily="@font/nanumbarungothic"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:text="현재 비밀번호를 입력해주세요."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>